@{
	ViewData["Title"] = "Search";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-12 mb-4">
			@Html.Partial("_SearchBar")
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<div class="shadow rounded">
				<div class="border-bottom border-3 p-2">
					<h4 class="text-pink text-center fst-italic">Recipe</h4>
					@Html.Partial("_Sidemenu")
				</div>
			</div>
		</div>
		<div class="col-10">
			<h2 class="text-dark">Search Recipe</h2>
			<div id="SearchRecipes" class="row"></div>
		</div>
	</div>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
	$(document).ready(function () {
		GetRecipes('@ViewBag.Recipe', 'SearchRecipes', true);
	});

</script>